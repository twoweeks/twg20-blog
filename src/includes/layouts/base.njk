<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} â€“ {% endif %}{{ metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">

    <link rel="shortcut icon" href="{{ '/img/favicon.png' | url }}" />

    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">

    <link rel="stylesheet" href="{{ '/styles/index.css' | addTimestamp | url }}">
    <link rel="stylesheet" href="{{ '/styles/main.css' | addTimestamp | url }}">
  </head>
  <body>
    <div class="container">
      <header class="header">
        <h1 class="header__title hidden">{{ metadata.title }}</h1>
        <div class="header__image" style="--im-w: 1080px; --im-h: 400px;">
          <a href="/"><img width="1080" height="400" src="{{ '/img/header-image.png' | url }}" alt="{{ metadata.title }}"></a>
        </div>
      </header>

      <main class="content">
        {% include "../content-top.njk" %}

        <section class="content__posts {% if is_page %}page{% endif %}">
          {{ content | safe }}
        </section>
      </main>

      {% include "./sidebar.njk" %}

      {% include "./footer.njk" %}
    </div>
  </body>
</html>
